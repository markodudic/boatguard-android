<resources>

	<!-- DAY THEME -->
    <style name="AppThemeDay">
    	<item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
		<item name="background">@color/background_day</item>
	    <item name="vertical_line">@color/vertical_line_day</item>
	    <item name="horizontal_line">@color/horizontal_line_day</item>
	    <item name="background_button">@color/background_button_day</item>
	    <item name="text_default">@color/text_default_day</item>
	    <item name="text_content">@color/text_content_day</item>
	    <item name="text_input">@color/text_input_day</item>    
	    <item name="component">@color/component_day</item>    
	    <item name="settings_button">@color/settings_button_day</item>      
	    	    	    
	    <item name="ic_logotype">@drawable/ic_logotype_day</item>    
	    <item name="ic_logotype_alarm">@drawable/ic_logotype_alarm_day</item>    
	    <item name="ic_settings">@drawable/ic_settings_day</item>    
	    <item name="ic_home">@drawable/ic_home_day</item>    
	    <item name="ic_location">@drawable/ic_location_day</item>    
	    <item name="ic_anchor_disabled">@drawable/ic_anchor_disabled_day</item>    
	    <item name="ic_forward">@drawable/ic_forward_day</item>    
	    <item name="ic_back">@drawable/ic_back_day</item>    
	    <item name="ic_seekbar_thumb">@drawable/ic_seekbar_day</item>    
	    <item name="ic_delete">@drawable/ic_delete_day</item> 
	    <item name="ic_light_disabled">@drawable/ic_light_disabled_day</item>    
	    <item name="ic_door_disabled">@drawable/ic_door_disabled_day</item>    
	    <item name="ic_fan_disabled">@drawable/ic_fan_disabled_day</item>    
	    	    	    
	    <item name="android:spinnerItemStyle">@style/SpinnerText</item>
	</style>
   
    
	<!-- NIGHT THEME -->
   <style name="AppThemeNight">
    	<item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
		<item name="background">@color/background_night</item>
	    <item name="vertical_line">@color/vertical_line_night</item>
	    <item name="horizontal_line">@color/horizontal_line_night</item>
	    <item name="background_button">@color/background_button_night</item>
	    <item name="text_default">@color/text_default_night</item>
	    <item name="text_content">@color/text_content_night</item>
	    <item name="text_input">@color/text_input_night</item>    
	    <item name="component">@color/component_night</item>  
	    <item name="settings_button">@color/settings_button_night</item>     
	    	    	      
	    <item name="ic_logotype">@drawable/ic_logotype</item>    
	    <item name="ic_logotype_alarm">@drawable/ic_logotype_alarm</item>    
	    <item name="ic_settings">@drawable/ic_settings</item>    
	    <item name="ic_home">@drawable/ic_home</item>    
	    <item name="ic_location">@drawable/ic_location</item>    
	    <item name="ic_anchor_disabled">@drawable/ic_anchor_disabled</item>    
	    <item name="ic_forward">@drawable/ic_forward</item>    
	    <item name="ic_back">@drawable/ic_back</item>    
	    <item name="ic_seekbar_thumb">@drawable/ic_seekbar_night</item>    
	    <item name="ic_delete">@drawable/ic_delete</item> 
	    <item name="ic_light_disabled">@drawable/ic_light_disabled</item>    
	    <item name="ic_door_disabled">@drawable/ic_door_disabled</item>    
	    <item name="ic_fan_disabled">@drawable/ic_fan_disabled</item>    
	    	    	    	    
	    <item name="android:spinnerItemStyle">@style/SpinnerText</item>
	</style>
    
	<style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
	  <item name="android:background">?background</item>
	  <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
	  <item name="android:height">@dimen/actionbar_height</item>
	  <item name="android:icon">@android:color/transparent</item>
	</style>
	
	<style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
	  <item name="android:textColor">?text_content</item>
	  <item name="android:textSize">@dimen/actionbar_text_size</item>
	</style>
	
   <style name="ActionBarText"  parent="@android:style/TextAppearance.Medium">
       <item name="android:textSize">@dimen/actionbar_text_size</item>
       <item name="android:textColor">?text_default</item>
   </style>	
	
   <style name="Dialog" parent="@android:style/Theme.Dialog">
	    <item name="android:windowNoTitle">true</item>
   </style>

    <style name="DeleteImageView">
       <item name="android:layout_gravity">right|center_vertical</item>
       <item name="android:layout_marginRight">@dimen/delete_image_view_right</item>
   </style>	
   
   <style name="alarmTitle">
       <item name="android:textSize">@dimen/title_text_size</item>
       <item name="android:textColor">@color/text_alarm_title</item>
       <item name="android:layout_gravity">center_vertical|center_horizontal</item>
       <item name="android:gravity">center_vertical|center_horizontal</item>
       <item name="android:layout_marginLeft">@dimen/dialog_alarm_title_margin</item>
       <item name="android:layout_marginRight">@dimen/dialog_alarm_title_margin</item>
   </style>	
   
   <style name="alarmText" parent="alarmTitle">
       <item name="android:layout_marginLeft">0dp</item>
       <item name="android:layout_marginRight">0dp</item>
       <item name="android:paddingTop">@dimen/dialog_alarm_text_margin</item>
   </style>
   
   <style name="alarmButton" parent="alarmTitle">
       <item name="android:layout_marginLeft">0dp</item>
       <item name="android:layout_marginRight">0dp</item>
       <item name="android:textSize">@dimen/button_text_size</item>
       <item name="android:textColor">@color/text_alarm_desc</item>
   </style>

   <style name="alarmDesc" parent="alarmButton">
       <item name="android:paddingTop">@dimen/dialog_alarm_text_margin</item>
       <item name="android:paddingBottom">@dimen/dialog_alarm_text_margin</item>
   </style>
      
   <style name="Layout">
       <item name="android:background">?background</item>
   </style>	

   <style name="LayoutMenu">
       <item name="android:background">@color/transparent_color</item>
   </style>	
   
				
   <style name="LoginText">
       <item name="android:layout_height">@dimen/login_text_height</item>
       <item name="android:textSize">@dimen/button_text_size</item>
       <item name="android:textColor">?text_default</item>
       <item name="android:gravity">center_vertical</item>
       <item name="android:layout_marginTop">@dimen/login_edit_margin_top</item>
       <item name="android:layout_marginBottom">@dimen/login_edit_margin_bottom</item>
   </style>	
 
   <style name="LoginRememberText" parent="LoginText">
       <item name="android:layout_height">@dimen/login_remember_height</item>
       <item name="android:layout_marginTop">0dp</item>
       <item name="android:layout_marginBottom">0dp</item>
   </style>	
   
   <style name="LoginEditText" parent="LoginRememberText">
       <item name="android:textColor">@color/text_default_day</item>
       <item name="android:layout_height">@dimen/login_text_height</item>
       <item name="android:paddingLeft">@dimen/login_edit_padding</item>
       <item name="android:background">@drawable/login_background</item>
   </style>	
   
   <style name="SpinnerEditText" parent="LoginEditText">
       <item name="android:paddingLeft">@dimen/spinner_edit_padding</item>
   </style>	
   
   <style name="RegisterButtonText">
       <item name="android:textSize">@dimen/button_text_size</item>
       <item name="android:gravity">center_vertical|center_horizontal</item>
       <item name="android:background">?text_content</item>
       <item name="android:textColor">?settings_button</item>
       <item name="android:layout_height">@dimen/login_edit_height</item>
       <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
   </style>	   

   <style name="OkButtonText" parent="RegisterButtonText">
       <item name="android:layout_marginRight">0dp</item>
       <item name="android:textColor">@color/text_default_night</item>
       <item name="android:background">@color/settings_button_night</item>       
   </style>	   
	   
   <style name="LoginButtonText" parent="RegisterButtonText">
       <item name="android:background">?text_default</item>
       <item name="android:layout_marginRight">0dp</item>
   </style>	   
   
   <style name="LastUpdateText">
       <item name="android:textSize">@dimen/small_text_size</item>
       <item name="android:textColor">?text_default</item>
       <item name="android:gravity">center_vertical|center_horizontal</item>
   </style>	  
      
   <style name="RefreshImage">
       <item name="android:layout_gravity">center_horizontal|center_vertical</item>
   </style>	  

        
   <style name="MenuLineLayout">
       <item name="android:layout_width">@dimen/line_height</item>
       <item name="android:layout_marginTop">@dimen/menu_line_margin</item>
       <item name="android:layout_marginBottom">@dimen/menu_line_margin</item>
       <item name="android:background">?horizontal_line</item>
   </style>	 

   
   <style name="LineLayout" parent="ComponentLineLayout">
       <item name="android:layout_marginLeft">@dimen/components_margin</item>
       <item name="android:layout_marginRight">@dimen/components_margin</item>
   </style>   
   
   <style name="ComponentLineLayout">
       <item name="android:layout_marginLeft">@dimen/components_margin</item>
       <item name="android:layout_marginRight">@dimen/components_margin</item>
       <item name="android:layout_height">@dimen/line_height</item>
       <item name="android:background">?horizontal_line</item>
   </style>
   
   <style name="Component">
       <item name="android:paddingLeft">@dimen/components_margin</item>
       <item name="android:paddingRight">@dimen/components_margin</item>
       <item name="android:layout_height">@dimen/component_height</item>
       <item name="android:background">?component</item>
   </style>	  
      
   <style name="ComponentText">
       <item name="android:textSize">@dimen/component_text_size</item>
       <item name="android:textColor">?text_content</item>
       <item name="android:layout_gravity">center_vertical</item>
   </style>	  
    
   <style name="ComponentAccuText" parent="ComponentText">
       <item name="android:textSize">@dimen/title_text_size</item>
       <item name="android:textColor">@color/text_green</item>
   </style>	   
   
   
   <!-- style name="DrawerTitleText">
       <item name="android:textSize">16.0sp</item>
       <item name="android:textColor">?text_default</item>
       <item name="android:gravity">bottom</item>
   </style>	   

   <style name="DrawerTextText" parent="DrawerTitleText">
       <item name="android:textColor">@color/text_green</item>
       <item name="android:gravity">top</item>
    </style-->	   
  
   <style name="SpinnerText">
       <item name="android:textSize">@dimen/component_text_size</item>
       <item name="android:textColor">?settings_button</item>
	   <item name="android:background">?text_content</item>
	   <item name="android:paddingLeft">10dp</item>
	   <item name="android:paddingRight">10dp</item>
	   <item name="android:paddingTop">2dp</item>
	   <item name="android:paddingBottom">2dp</item>
   </style>     
   
   <style name="SettingsItemsLayout">
		<item name="android:background">?background</item>
		<item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
		<item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
   </style>	
      
   <style name="SettingsLayout" parent="SettingsItemsLayout">
		<item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
		<item name="android:paddingTop">@dimen/activity_vertical_margin</item>
   </style>	
   
   <style name="SettingsText">
       <item name="android:textSize">@dimen/small_text_size</item>
       <item name="android:textColor">?text_default</item>
       <item name="android:layout_gravity">center_vertical</item>
       <item name="android:gravity">center_vertical</item>
   </style> 

   <style name="SettingsTextSmall" parent="SettingsText">
       <item name="android:textSize">@dimen/small_text_size</item>
       <item name="android:textColor">?text_content</item>
   </style> 
   
   <style name="SettingsValueText" parent="SettingsText">
       <item name="android:textColor">@color/text_green</item>
       <item name="android:gravity">right</item>
   </style> 

   <style name="SettingsButtonText" parent="SettingsText">
       <item name="android:textColor">@color/text_default_night</item>
       <item name="android:gravity">center_vertical|center_horizontal</item>
	   <item name="android:background">@color/settings_button_night</item>
   </style>	     
   
   <style name="SettingsItem">
       <item name="android:textSize">@dimen/small_text_size</item>
       <item name="android:textColor">?text_default</item>
   </style>	   
   
   <style name="SettingsItemTitle" parent="SettingsItem">
       <item name="android:gravity">bottom</item>
   </style>	   

   <style name="SettingsItemValue" parent="SettingsItemTitle">
       <item name="android:textColor">@color/text_green</item>
       <item name="android:gravity">top</item>
   </style>	     
   
   <style name="SettingsSeekBar">
	   <item name="android:thumb">?ic_seekbar_thumb</item>
	   <item name="android:max">1000</item>
	   <item name="android:progressDrawable">@drawable/seekbar_progress</item>
	   <item name="android:maxHeight">@dimen/seekbar_height</item>
	   <item name="android:minHeight">@dimen/seekbar_height</item>
	   <item name="android:layout_gravity">center_vertical</item>
   </style>	   

   <style name="SettingsSeekBarSmall" parent="SettingsSeekBar">
	   <item name="android:max">100</item>
   </style>	   

   <style name="HistoryItem">
       <item name="android:textSize">@dimen/history_text_size</item>
       <item name="android:textColor">?text_default</item>
   </style>	 
   
   <style name="ReadOnlyTitle">
       <item name="android:textColor">@color/text_default_day</item>
       <item name="android:textSize">@dimen/component_text_size</item>
       <item name="android:paddingTop">@dimen/settings_text_padding</item>
       <item name="android:paddingLeft">@dimen/settings_text_padding</item>
   </style>	
   
   <style name="ReadOnlyText" parent="ReadOnlyTitle">
       <item name="android:textSize">@dimen/small_text_size</item>
       <item name="android:paddingTop">0dp</item>
       <item name="android:paddingBottom">@dimen/settings_text_padding</item>
       </style>	

   <style name="ReadOnlyBackground">
       <item name="android:background">@drawable/login_background</item>
   </style>	

   
   <style name="WidgetLastUpdateText" parent="LastUpdateText">
       <item name="android:textSize">@dimen/widget_title_size</item>
       <item name="android:textColor">@color/text_default_day</item>
   </style>	  
    
   <style name="WidgetComponentAccuText" parent="ComponentAccuText">
       <item name="android:textSize">@dimen/widget_text_size</item>
   </style>	
   
   <style name="WidgetMenuLineLayout">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">@dimen/line_height</item>
       <item name="android:background">@color/horizontal_line_day</item>
   </style>	 
   
</resources>












