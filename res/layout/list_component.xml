<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:boatguard="http://schemas.android.com/apk/res/si.noemus.boatguard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
	<LinearLayout 
	    android:id="@+id/main"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    style="@style/Component"
	    android:orientation="vertical" >
	
		<LinearLayout 
			android:layout_width="match_parent"
		    android:layout_height="@dimen/component_height"
		    android:orientation="horizontal" >
		    
		    <si.noemus.boatguard.components.TextViewFont
		        android:id="@+id/label"
		        style="@style/ComponentText"
		        boatguard:font_name="@string/font_regular"
		    	android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="label" />
		 
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="3"
			    android:gravity="center_horizontal"
			    android:orientation="horizontal" >
			    
		    <ImageView
		        android:id="@+id/logo"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/component_icon_height"
		        android:layout_gravity="center_vertical|center_horizontal"
		        android:src="@drawable/ic_icon" />
	
		    </LinearLayout>
		</LinearLayout>

		<LinearLayout
	  	    android:id="@+id/line"
			android:orientation="horizontal"
			android:layout_width="match_parent"
	  	    style="@style/ComponentLineLayout" />
		
	</LinearLayout>
		
	<LinearLayout
	    android:id="@+id/shadow_top"
		android:layout_width="match_parent"
	    android:layout_height="@dimen/shadow"
	    android:orientation="vertical"
	    android:layout_gravity="top"
	    android:background="@drawable/drop_shadow_top"
	    android:visibility="gone"/>

	<LinearLayout
	    android:id="@+id/shadow_bottom"
		android:layout_width="match_parent"
	    android:layout_height="@dimen/shadow"
	    android:orientation="vertical"
	    android:layout_gravity="bottom"
	    android:background="@drawable/drop_shadow_bottom"
	    android:visibility="gone"/>
		
    
</FrameLayout>