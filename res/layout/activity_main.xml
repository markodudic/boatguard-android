<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <FrameLayout android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    style="@style/Layout" >
	    
	    <ScrollView 
	        android:id="@+id/scroll_main"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:fillViewport="true" >
		    
			<fragment
			    android:id="@+id/fragment_main"
			    android:name="si.noemus.boatguard.MainFragment"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" />
	
		</ScrollView>
		
		<LinearLayout
		    android:id="@+id/lLocation"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginBottom="@dimen/menu_height"
		    android:orientation="vertical"
			android:visibility="gone" >
		
	    	<fragment 
			    android:name="com.google.android.gms.maps.MapFragment"
		        android:id="@+id/fragment_location"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" />		    
		</LinearLayout>
			
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/shadow"
		    android:orientation="vertical"
		    android:layout_gravity="top"
		    android:background="@drawable/drop_shadow_top"/>
	    
		<LinearLayout
		    android:id="@+id/layout_menu"
			android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    style="@style/LayoutMenu"
		    android:orientation="vertical"
		    android:layout_gravity="bottom">
		
		 	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/shadow"
			    android:orientation="vertical"
			    android:background="@drawable/drop_shadow_bottom"/>
		 	
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/menu_height"
			    style="@style/Layout"
			    android:orientation="horizontal">
			    
			    <ImageView
			        android:id="@+id/iv_settings"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal|center_vertical"
			        android:clickable="true"
			        android:layout_weight="1"
			        android:src="?ic_settings" />
	 		    
		    	<LinearLayout
			        android:layout_height="match_parent"
					style="@style/MenuLineLayout" />
			    
			    <ImageView
			        android:id="@+id/iv_home"
			        android:layout_height="wrap_content"
			        android:layout_width="match_parent"
			        android:src="?ic_home"
			        android:layout_gravity="center_horizontal|center_vertical"
			        android:layout_weight="1"
			        android:clickable="true" />
			    
		    	<LinearLayout
		    	    android:layout_height="match_parent"
		    	    style="@style/MenuLineLayout" />
			    
		    	<ImageView
			        android:id="@+id/iv_loction"
			        android:layout_height="wrap_content"
			        android:layout_width="match_parent"
			        android:src="?ic_location"
			        android:layout_gravity="center_horizontal|center_vertical"
			        android:layout_weight="1"
			        android:clickable="true" />
					    				    				    		    
		 		    
		    </LinearLayout>	
		</LinearLayout>
	
	</FrameLayout>
	
    <!-- Listview to display slider menu -->
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="?horizontal_line"
        android:dividerHeight="1dp"       
        android:background="?background"/>
</android.support.v4.widget.DrawerLayout>    